    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable groupId="root" displayName="42 Header" id="preferences.42Header"
                                 instance="me.rochblondiaux.headers.model.PluginSettings"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
